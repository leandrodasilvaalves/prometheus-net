{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "OpenTelemetry": {
        "ServiceName": "ApiOtel",
        "Exporter": {
            "Otlp": {
                "Endpoint": "http://localhost:4317"
            }
        }
    },
    "Metrics": {
        "EnabledMetrics": {
            "Microsoft.AspNetCore.*": true,
            "System.*": true,
            "MyCompany.*": true
        }
    },
    "Mode": "CLIENT",
    "Client": {
        "Url": "http://localhost:5282"
    }
}